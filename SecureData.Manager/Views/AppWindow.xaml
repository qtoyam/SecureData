<Window x:Class="SecureData.Manager.Views.AppWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:wcc="clr-namespace:WPFCore.Controls;assembly=WPFCore.Controls"
		xmlns:local="clr-namespace:SecureData.Manager.Views"
		mc:Ignorable="d"
		Title="AppWindow"
		Height="450"
		Width="800"
		Icon="{StaticResource diamondDrawingImage}"
		Background="{StaticResource PrimaryBackgroundBrush}"
		wcc:WindowChromeEx.Foreground="{StaticResource SecondaryTextBrush}"
		d:DataContext="{d:DesignInstance Type=local:AppWindow, IsDesignTimeCreatable=False}">
	<wcc:WindowChromeEx.Content>
		<StackPanel Orientation="Horizontal"
					Margin="5">
			<Menu WindowChrome.IsHitTestVisibleInChrome="True"
				  Background="Transparent"
				  IsTabStop="False">
				<wcc:MenuItemEx BackgroundMouseOver="Transparent"
								Padding="0"
								IsTabStop="False">
					<wcc:MenuItemEx.Header>
						<Image Source="{StaticResource diamondDrawingImage}" />
					</wcc:MenuItemEx.Header>
				</wcc:MenuItemEx>
			</Menu>
			<TextBlock Text="Secure Manager"
					   Style="{StaticResource SecondaryTextBlock}"
					   Margin="5,0,5,0" />
		</StackPanel>
	</wcc:WindowChromeEx.Content>
	<Grid>
		
	</Grid>
</Window>
